{% extends "layouts/public.njk" %}

{% block head %}        

    <title>Foodfy</title>
    
{% endblock %}


{% block content %}
         
        <section class="cards recipes">

            {% for recipe in recipes %}
            <div class="card">
                <div class="card-img {{ 'featured-wrapper' if recipe.featured }}">
                    <a href="/recipes/{{recipe.id}}"><img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}"></a>
                    {% if recipe.featured %}
                        <div class="featured">Featured</div>                    
                    {% endif %}
                </div>
                <div class="card-title">
                    <p>{{recipe.title}}</p>
                </div>
                <div class="card-author">
                    <p>{{recipe.chef_name}}</p>
                </div>
            </div>
            {% endfor %}
            
        </section>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total_recipes}}
        ></div>
        
        <script src="/scripts.js"></script>
        
{% endblock %}