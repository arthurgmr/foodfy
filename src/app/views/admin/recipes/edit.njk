{% extends "../layout_adm.njk" %}

{% block head %}    
    <link rel="stylesheet" href="/styles/styles_adm.css">
    <link rel="stylesheet" href="/styles/styles_adm-recipe.css">
    
    <title>Foodfy - Adm - Show</title>
{% endblock %}

{% block content %}

            
    <section class="content forms">
        
        <form id="form-delete" method="POST" action="/admin/recipes/{{recipe.id}}/?_method=DELETE">
            <div class="options"> 
                <input type="hidden" name="id" value="{{recipe.id}}">
                <button class="button-delete" type="submit">Delete</button>
            </div>
        </form>

        <form method="POST" action="/admin/recipes/{{recipe.id}}/?_method=PUT" enctype="multipart/form-data"> 
            <div class="menu">
                <div class="title">
                    <p>Editing Recipe</p>
                </div>
                <div class="options">                        
                    <button type="submit">Save Register</button>                        
                </div>
            </div>

            {% include 'admin/recipes/fields.njk' %}

            <input type="hidden" name="id" value="{{recipe.id}}">

            </form>
    </section>

  
    <script src="/scripts_adm.js"></script>
        
{% endblock %}