{% extends "layouts/auth.njk" %}

{% block head %}

    <title>Foodfy - Forgot Pass</title>
    
{% endblock %}

{% block content %}

<section class="login-container">
    <form method="POST" action="/session/forgot-password">
    
        <div class="header">
            <h3>Forgot Password</h3>
        </div>

        <div class="section">

            <div class="field">
                <div>Email</div>                
                    <div class="input">
                        <input 
                            type="email"
                            name="email"
                            placeholder="Enter your email for recovery your pass"
                            value="{{user.email}}"
                            onblur="Validate.apply(this, 'isEmail')"                 
                        >
                    </div>
            </div>
        </div>

        <div class="footer recovery-reset">

            <button class="button" type="submit">Recovery</button>

        </div> 
    </form>
</section>


{% endblock %}       
        