{% extends "layouts/auth.njk" %}

{% block head %}

    <title>Foodfy - Forgot Pass</title>
    
{% endblock %}

{% block content %}

<section class="login-container">
    <form method="POST" action="/users/forgot-password">
    
        <div class="header">
            <h3>Forgot Password</h3>
        </div>

        <div class="section">

            <div class="fields error">
                <div>Email</div>                
                    <div>
                        <input 
                            type="email"
                            name="email"
                            placeholder="Enter your email for recovery your pass"
                            value="{{user.email}}"                
                        >
                    </div>
            </div>
        </div>

        <div class="footer recovery">

            <button class="button" type="submit">Recovery</button>

        </div> 
    </form>
</section>


{% endblock %}       
        