{% extends "layouts/auth.njk" %}

{% block head %}

    <title>Foodfy - Reset Pass</title>
    
{% endblock %}

{% block content %}

<section class="login-container">
    <form method="POST" action="/session/password-reset">
    
        <div class="header">
            <h3>New Password</h3>
        </div>

        <div class="section">

            <div class="fields error">
                <div>Email</div>                
                    <div>
                        <input 
                            type="email"
                            name="email"
                            placeholder="Enter your email"
                            value="{{user.email}}"                
                        >
                    </div>
            </div>

            <div class="fields error">
                <div>Passaword</div>
                    <div class="input">
                        <input 
                            type="password" 
                            name="password"
                            placeholder="Enter your a new password"
                        >           
                    </div>
            </div>
            <div class="fields error">
                <div>Passaword Repeat</div>
                    <div class="input">
                        <input 
                            type="password" 
                            name="passwordRepeat"
                            placeholder="Repeat password"

                        >           
                    </div>
            </div>
        </div>

        <input type="hidden" name="token" value="{{token}}">

        <div class="footer recovery-reset">

            <button class="button" type="submit">Access</button>

        </div> 
    </form>
</section>


{% endblock %}       
        