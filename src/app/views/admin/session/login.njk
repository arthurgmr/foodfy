{% extends "layouts/auth.njk" %}

{% block head %}

    <title>Foodfy - Login</title>
    
{% endblock %}

{% block content %}

<section class="login-container">
    <form method="POST" action="/session/login">
    
        <div class="header">
            <h3>Begin Session</h3>
        </div>

        <div class="section">

            <div class="field">
                <div>Email</div>                
                <div class="input">
                    <input 
                        type="email"
                        name="email"
                        placeholder="Enter your email"
                        value="{{user.email}}"
                        onblur="Validate.apply(this, 'isEmail')"                 
                    >
                </div>
            </div>

            <div class="field">
                <div>Passaword</div>
                    <div class="input">
                        <input 
                            type="password" 
                            name="password"
                            placeholder="Enter your password"
                        >           
                    </div>
            </div>
        </div>

        <div class="footer">
            <a class="lost-password" href="/session/forgot-password">Lost Password?</a>

            <button class="button" type="submit">Access</button>

        </div> 
    </form>
</section>


{% endblock %}       
        